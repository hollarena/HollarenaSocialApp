<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/all_user_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ded"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/all_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/all_user_profile_pic"
        android:layout_toRightOf="@+id/all_user_profile_pic"
        android:text="@string/display_name"
        android:textColor="@android:color/background_dark" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/user_online_icon"
        android:src="@drawable/online_icon"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>
</RelativeLayout>